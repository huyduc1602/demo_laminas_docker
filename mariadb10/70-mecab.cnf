# this is only for the mysqld standalone daemon
[mysqld]
interactive_timeout=180
wait_timeout=180
loose-mecab-rc-file=/etc/mecabrc
innodb_ft_min_token_size=1
innodb_ft_enable_stopword=OFF
# innodb_ft_server_stopword_table=db_system/tbl_ft_stopwords
# innodb_ft_user_stopword_table=db_system/tbl_ft_stopwords
ft_min_word_len=1
ft_stopword_file=/etc/mysql/empty_stopword.txt
# MySQL server has gone away
max_allowed_packet=32M
mroonga_default_tokenizer=TokenMecab